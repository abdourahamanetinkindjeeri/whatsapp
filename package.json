{
  "name": "whatsapp-project",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "cd src/server && node server.js",
    "dev": "cd src/server && nodemon server.js",
    "build": "vite build",
    "server": "cd src/server && node server.js",
    "client": "cross-env VITE_API_URL=http://localhost:3000 vite",
    "dev:all": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.3",
    "postcss": "^8.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.0.0",
    "vite": "^6.3.5"
  }
}
